{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{app.py,telegram_adapter.py,**/*.db,logs/**,website/**,__pycache__/**}"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/website/index.html" },
    { "source": "/(.*)", "destination": "/website/$1" }
  ],
  "redirects": [
    { "source": "/sponsor", "destination": "/website/sponsor.html", "permanent": false }
  ]
}
